package tn.dksoft.accesscontrol.persistence.entities;


import com.fasterxml.jackson.annotation.JsonIgnore;
import lombok.*;
import lombok.EqualsAndHashCode.Include;
import tn.dksoft.accesscontrol.annotations.Trackable;
import tn.dksoft.accesscontrol.utils.ITrackIdentity;

import javax.persistence.*;
import java.io.Serializable;
import java.util.Collection;

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
@ToString
@Trackable
@EqualsAndHashCode(onlyExplicitlyIncluded = true, callSuper = false)
@Entity
@Table(name = "t_role")
public class Role extends TimestampEntity implements Serializable, ITrackIdentity {
    private static final long serialVersionUID = 1L;

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Include
    private Long id;

    private String name;
    @ManyToMany(mappedBy = "roles")
    @JsonIgnore
    private Collection<User> users;
    @ManyToMany
    @ToString.Exclude
    private Collection<Privilege> privileges;
	private boolean isDeleted = false;

	@Override
	public int getIdentifierForTracking() {
		return id.intValue();
	}
	@Override
	public String getDescriptionForTracking() {
		return "Role[id="+id.toString()+" name="+name+"]";	}

}
